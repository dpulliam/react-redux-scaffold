{
  "name": "react-redux-scaffold",
  "version": "1.0.20",
  "description": "Project scaffolding for react-redux application",
  "main": "index.js",
  "scripts": {
    "test": "mocha --compilers js:babel-core/register --require ./test/test_helper.js \"test/**/*@(.js|.jsx)\"",
    "test:watch": "npm run test -- --watch",
    "lint": "npm run lint:src && npm run lint:test && npm run lint:styles",
    "lint:src": "$(npm bin)/eslint --ext .js --ext .jsx 'src/' ",
    "lint:test": "$(npm bin)/eslint --ext .js --ext .jsx 'test/'",
    "lint:styles": "$(npm bin)/stylelint 'src/**/*.scss' --syntax scss",
    "clean": "rm -rf ./dist",
    "clean:deps": "rm -rf ./node_modules",
    "build": "npm run clean && $(npm bin)/webpack --config webpack.prod.config.js",
    "build:dev": "$(npm bin)/webpack --config webpack.dev.config.js",
    "start:dev": "$(npm bin)/webpack-dev-server --config webpack.dev.config.js",
    "stats": "$(npm bin)/webpack --config webpack.prod.config.js --profile --json > stats.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dpulliam/react-redux-scaffold.git"
  },
  "keywords": [
    "react",
    "redux",
    "flux",
    "webpack",
    "babel",
    "es6",
    "es2015",
    "scaffold",
    "template"
  ],
  "author": "dylan pulliam",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dpulliam/react-redux-scaffold/issues"
  },
  "homepage": "https://github.com/dpulliam/react-redux-scaffold#readme",
  "devDependencies": {
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.5",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-react-hmre": "^1.1.1",
    "chai": "^3.5.0",
    "chai-immutable": "^1.6.0",
    "css-loader": "^0.24.0",
    "eslint": "^3.4.0",
    "eslint-loader": "^1.5.0",
    "eslint-plugin-react": "^6.2.0",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.22.0",
    "jsdom": "^9.4.5",
    "mocha": "^3.0.2",
    "node-sass": "^3.8.0",
    "react-transform-hmr": "^1.0.4",
    "sass-loader": "^4.0.1",
    "style-loader": "^0.13.1",
    "stylelint": "^7.2.0",
    "stylelint-config-standard": "^13.0.0",
    "stylelint-config-suitcss": "^8.0.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.15.1",
    "webpack-validator": "^2.2.7"
  },
  "dependencies": {
    "dotenv": "^2.0.0",
    "immutable": "^3.8.1",
    "react": "^15.3.1",
    "react-addons-pure-render-mixin": "^15.3.1",
    "react-addons-test-utils": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-redux": "^4.4.5",
    "react-router": "^2.7.0",
    "redux": "^3.6.0",
    "socket.io-client": "^1.4.8"
  }
}
